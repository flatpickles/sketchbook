            "section": "Functions"
        },
        "fullWidthFunction": {
            "buttonText": "Full width button input!",
            "fullWidthInput": true,
            "section": "Functions"
        },

        "multipleAudioFiles": {
            "name": "Audio Files",
            "multiple": true,
            "accept": "audio/*",
            "mode": "arrayBuffer",
            "section": "File Inputs"
        },
        "singleImageFile": {
            "name": "Image File",
            "multiple": false,
            "mode": "image",
            "section": "File Inputs"
        },
        "multipleVideoFiles": {
            "name": "Video Files",
            "multiple": true,
            "accept": "video/*",
            "mode": "arrayBuffer",
            "section": "File Inputs"
        }
