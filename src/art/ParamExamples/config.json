            "step": 1
        },
        "numberSliderOnly": {
            "name": "Slider Number",
            "hoverText": "Slider Number with configurable hover text details.",
            "style": "slider",
            "section": "Numbers"
        },
        "numberFieldOnly": {
            "name": "Field Number",
            "style": "field",
            "section": "Numbers"
        },
        "numberOption": {
            "name": "Number Options",
            "options": [1, 2, 3],
            "section": "Numbers"
        },

        "stringMultline": {
            "name": "Multiline String",
            "style": "multi",
            "section": "Strings"
        },
        "stringColor": {
            "name": "Color String",
            "style": "color",
            "section": "Strings"
        },
        "stringOptions": {
            "name": "String Options",
            "style": "options",
            "options": {
                "Option 1": "option1",
                "Option 2": "option2",
                "Option 3": "option3"
            },
            "section": "Strings"
        },

        "arraySliderOnly": {
            "name": "Slider Array",
            "style": "slider",
            "section": "Numeric Arrays",
            "min": 1,
            "max": 5,
            "step": 1
        },
        "arrayFieldOnly": {
            "name": "Field Array",
            "style": "field",
            "section": "Numeric Arrays"
        },
        "arrayCompactSlider": {
            "name": "Compact Sliders",
            "style": "compactSlider",
            "section": "Numeric Arrays"
        },
        "arrayCompactField": {
            "name": "Compact Fields",
            "style": "compactField",
            "section": "Numeric Arrays"
        },
        "arrayColor": {
            "name": "Color Array",
            "style": "unitColor",
            "section": "Numeric Arrays"
        },
        "arrayOption": {
            "name": "Array Options",
            "options": [
                [0.3, 0.7],
                [0.5, 0.5],
                [0.7, 0.3]
            ],
            "section": "Numeric Arrays"
        },
        "dimensionsOption": {
            "name": "Dimensions",
            "options": {
                "A3": [11.7, 16.5],
                "A4": [8.3, 11.7],
                "A5": [5.8, 8.3]
            },
            "section": "Numeric Arrays"
        },

        "functionCustom": {
            "name": "Custom Text",
